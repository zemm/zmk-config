	keymap {
		compatible = "zmk,keymap";

		// Colemak on OS side
		// |     |  Q  |  W  |  F  |  P  |  G  |   |  J  |  L  |  U  |  Y  |  Ä  |  Ö  |
		// |     |  A  |  R  |  S  |  T  |  D  |   |  H  |  N  |  E  |  I  |  O  |  '  |
		// |     |  Z  |  X  |  C  |  V  |  B  |   |  K  |  M  |  ,  |  .  |  /  |     |
		alpha_layer {
			bindings = <
&lt KPD TAB    &kp OC_Q      &kp OC_W      &kp OC_F     &kp OC_P     &kp OC_G      ___  &kp OC_J      &kp OC_L      &kp OC_U     &kp OC_Y     &kp OC_AU    &kp OC_OU
&kp BSPC       &ml LM1 OC_A  &ml LM2 OC_R  &ml LM3 OC_S &ml LM4 OC_T &ml RALT OC_D ___  &mr RALT OC_H &mr RM1 OC_N  &mr RM2 OC_E &mr RM3 OC_I &mr RM4 OC_O &kp SQT
&mt LSHFT ESC  &lt KPD OC_Z  &kp OC_X      &kp OC_C     &kp OC_V     &kp OC_B      ___  &kp OC_K      &kp OC_M      &kp COMMA    &kp DOT      &lt NAV FSLH &mt RSHFT RET
&lmt_kcd       &lt_spc NAV 0 &lt_spc NAV 0                                         ___  &mo SYM       &mo SYM       &mo NAV
			>;
		};

		navigation_layer {
			bindings = <
&trans   &kp FSLH      &kp SPACE  &kp HASH   &kp SPACE  &kp F4        ___  &kp INS      &kp PG_UP     &kp UP     &kp PG_DN  &kp DEL   &kp ESC
&trans   &kp LM1       &kp LM2    &kp LM3    &kp LM4    &ml RALT DEL  ___  &kp BSPC     &kp LEFT      &kp DOWN   &kp RIGHT  &none     &kp SPACE
&trans   &kp LC(Z)     &kp LC(X)  &kp LC(C)  &kp LC(V)  &kp RET       ___  &none        &kp HOME      &none      &kp END    &kp FSLH  &trans
&mo MAC  &lt_spc SYM 0 &lt_spc SYM 0                                  ___  &lm RSFT SYM &lm RSFT SYM  &mo FUN
			>;
		};

